<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mDefaultDarkThemeColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="操作确认"
        android:textColor="@color/mDefaultListTextColor"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_dialog_title"
        android:background="@color/mDefaultListTextColor" />

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_dialog_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="操作确认操作确认操作确认操作确认操作确认操作确认操作确认操作确认操作确认操作确认操作确认操作确认"
        android:textColor="@color/mDefaultListTextColor"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_dialog_content"
        android:background="@color/mDefaultListTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_content"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripper_dialog_button"
            android:text="确认"
            android:textColor="@color/mDefaultListTextColor" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/mDefaultListTextColor" />

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripper_dialog_button"
            android:text="没错"
            android:textColor="@color/mDefaultListTextColor" />

    </LinearLayout>

</RelativeLayout>